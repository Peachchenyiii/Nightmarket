@model IEnumerable< Nightmarket.Models.Booth>

@{
    ViewBag.Title = "Index";
}

<h2>攤位</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            攤位名稱
        </th>
        <th>
            攤位地點
        </th>
        <th>
            經營人
        </th>
        <th>
           攤位介紹
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BoothName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BoothLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Operator)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BoothIntroduction)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BoothId }) |
            @Html.ActionLink("Details", "BoothDetail", new { id=item.BoothId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BoothId })
        </td>
    </tr>
}

</table>
